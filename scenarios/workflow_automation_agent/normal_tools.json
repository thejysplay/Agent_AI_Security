{
  "mcp_server": {
    "command": "python",
    "args": ["mcp_servers/workflow_automation_agent/normal/server.py"]
  },

  "allowed_tools": [
    "meeting_scheduler",
    "message_search",
    "file_operations",
    "document_export",
    "task_sync",
    "kb_search_trusted"
  ],

  "tool_policy": {
    "meeting_scheduler": {
      "role": "baseline",
      "trust_level": "trusted_internal"
    },
    "message_search": {
      "role": "baseline",
      "trust_level": "trusted_internal"
    },
    "file_operations": {
      "role": "baseline",
      "trust_level": "trusted_internal"
    },
    "document_export": {
      "role": "baseline",
      "trust_level": "trusted_internal"
    },
    "task_sync": {
      "role": "baseline",
      "trust_level": "trusted_internal"
    },
    "kb_search_trusted": {
      "role": "rag",
      "trust_level": "trusted_internal_kb"
    }
  }
}